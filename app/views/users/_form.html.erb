<%= simple_form_for((@user, :url => (@user.new_record? ? users_path : user_path(@user)), html: {class: 'form-horizontal' }) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit %>
<% end %>
